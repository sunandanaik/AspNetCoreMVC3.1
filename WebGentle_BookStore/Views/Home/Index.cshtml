@*@{
    Layout = "_Layout";
}*@
@{ 
    ViewData["Title"] = "Home";
    dynamic data = ViewBag.Data;
    var bookInfo = ViewData["book"] as BookModel;
}

@section breadcrumb{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Page 1</a></li>
            <li class="breadcrumb-item active" aria-current="page">Index</li>
        </ol>
    </nav>

}

<section class="jumbotron text-center">
    <div class="container">
        <h1>Welcome to Book Store @ViewData["CustomProperty"] </h1>

        <environment names="Development">
            <h3>Development</h3>
        </environment>
        <environment names="Production, Staging">
            <h3>Production</h3>
        </environment>

        <p class="lead text-muted">
            @*@ViewBag.Data*@
            @data.Id and @data.Name <br />
            Book Id = @ViewBag.Type.Id <br />
            Author Name = @ViewBag.Type.Author <br />
            @ViewData["prop1"]
            <h2>Book Author : @bookInfo.Author</h2>
            <h2>Book Language : @bookInfo.Language</h2>
            Design a responsive home page for real-time application (Book Store) | Asp.Net Core tutorial
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search Books</a>
        </p>
    </div>
</section>

<div class="py-2 bg-light">
    <div class="container">
        @*<h3 class="h3">Top Books</h3>*@
        <big>Top Books</big>
        <p big>Top Books using Attribute</p>
        <div class="row">
            <div class="col-md-4">
                <partial name="_bookThumbnail" model="new BookModel()"/>
            </div>
            <div class="col-md-4">
                <partial name="_bookThumbnail" model="new BookModel()"/>
            </div>
            <div class="col-md-4">
                <partial name="_bookThumbnail" model="new BookModel()" />
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            //alert("Document is ready");
        })
    </script>
}








