@model IEnumerable<BookModel>
<!--OR-->
@*@model IEnumerable<WebGentle_BookStore.Models.BookModel>*@
@{
    //Layout = "_Layout";
    ViewData["Title"] = "All Books";
}

<div class="container">
    <h1>All Books List</h1>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">
                    <img src="@book.CoverImageUrl" class="bd-placeholder-img card-img-top img-thumbnail" alt="..." width="100%" height="225">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @*<a href="/book/getbook/@book.Id" class="btn btn-outline-secondary btn-sm">View Details</a>*@
                                
                                <!--To Pass multiple parameters using asp-route attribute-->
                                @*<a asp-controller="Book" asp-action="getbook" asp-route-id="@book.Id" asp-route-nameOfBook="@book.Title"
                                   class="btn btn-outline-secondary btn-sm">View Details</a>*@

                                <!--To Use the Route name mentioned in controller Actionmethod-->
                                <a asp-route="BookDetailsRoute" asp-route-id="@book.Id" asp-route-nameOfBook="@book.Title"
                                   class="btn btn-outline-secondary btn-sm">View Details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

