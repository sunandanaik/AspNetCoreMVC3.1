@model BookModel
@{
    ViewData["Title"] = "Add Book";
            //Layout = "~/Views/Shared/_Layout.cshtml"; //Its already specified in ViewStart.cshtml file.
}


<div class="container">
    <h3 class="display-4">Add New Book</h3>
    @if (ViewBag.IsSuccess)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratulations!</strong> You added new book Successfully.<br />
            Click <a asp-controller="book" asp-action="getbook" asp-route-id="@ViewBag.BookId">here</a> to View the details.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!--If you have different Action name and controller then you can specify this-->
    <form method="post" asp-action="AddNewBook" asp-controller="Book">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="TotalPages"></label>
            <input type="number" asp-for="TotalPages" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Add Book" class="btn btn-primary" />
        </div>
    </form>
</div>

